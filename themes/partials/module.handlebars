<h1>Módulo {{name}}</h1>
<div class="box clearfix meta">
    {{#extra}}
        {{#selleck}}
            <a class="button link-docs" href="/yui/docs/{{name}}">Guia do Usuário &amp; Exemplos</a>
        {{/selleck}}
    {{/extra}}

    {{#if requires}}
        <div class="uses">
            Requer
            <ul class="inline commas">
                {{#requires}}
                    <li>{{#crossLinkModule .}}{{/crossLinkModule}}</li>
                {{/requires}}
            </ul>
        </div>
    {{/if}}

    {{#if foundAt}}
        <div class="foundat">
            Definido em: <a href="{{foundAt}}">`{{{file}}}:{{{line}}}`</a>
        </div>
    {{/if}}

    {{#if since}}
        <p>Disponível desde {{since}}</p>
    {{/if}}
</div>

{{#if deprecated}}
    <div class="box deprecated">
        <p>
        {{#if deprecationMessage}}
            <strong>Depreciado:</strong> {{deprecationMessage}}
        {{else}}
            Este módulo está depreciado.
        {{/if}}
        </p>
    </div>
{{/if}}

<div class="box intro">
    {{{moduleDescription}}}
</div>

{{#example}}
    <div class="example">
        <h4>Exemplo:</h4>
        <div class="example-content">
            {{{.}}}
        </div>
    </div>
{{/example}}

<div class="yui3-g">
    <div class="yui3-u-1-2">
        {{#if moduleClasses}}
            <p>Este módulo provê as seguintes classes:</p>

            <ul class="module-classes">
            {{#moduleClasses}}
                <li class="module-class">
                    <a href="{{../projectRoot}}classes/{{name}}.html">
                        {{displayName}}
                    </a>
                </li>
            {{/moduleClasses}}
            </ul>
        {{/if}}
    </div>

    <div class="yui3-u-1-2">
        {{#if subModules}}
            <p>Este módulo é um rollup dos seguintes módulos:</p>

            <ul class="module-submodules">
            {{#subModules}}
                <li class="module-submodule">
                    <a href="{{../projectRoot}}modules/{{name}}.html">
                        {{displayName}}
                    </a>

                    <div class="module-submodule-description">
                        {{{description}}}
                    </div>
                </li>
            {{/subModules}}
            </ul>
        {{/if}}
    </div>
</div>
